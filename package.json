{
  "name": "mongo-express-app",
  "version": "1.0.0",
  "description": "A simple app connecting to MongoDB",
  "main": "server.js",
  "engines": {
    "node": ">=18.18.0 <24",
    "npm": ">=9"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "dev": "nodemon server.js",
    "dev:web": "npm --prefix frontend run dev",
    "dev:full": "concurrently -k -n server,web \"npm run dev\" \"npm run dev:web\"",
    "build:web": "npm --prefix frontend run build",
    "smoke:flows": "node scripts/smoke-flows.js",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^7.0.3",
    "multer": "^2.0.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4"
  }
}
